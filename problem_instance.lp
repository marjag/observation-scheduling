% Problem Instance

% satellite
satellite(1..2).

% observation tasks
task(1..5).

% control stations
control_st(1..2).

% ground stations
ground_st(1..3).

% observe task i by satellite j? (decision variable)
task_at(1,1,1;1,2,0).
task_at(2,1,0;2,2,1).
task_at(3,1,0;3,2,1).
task_at(4,1,1;4,2,0).
task_at(4,1,1;4,2,1).

% task priorities
priority(1,2). priority(2,1). priority(3,2). priority(4,3). priority(5,1).

% observe task i before task j (decision variable)
task_order(1,1,0). task_order(1,2,1). task_order(1,3,0). task_order(1,4,0). 
task_order(2,1,0). task_order(2,2,0). task_order(2,3,1). task_order(1,4,0). 
task_order(3,1,0). task_order(3,2,0). task_order(3,3,0). task_order(3,4,1). 
task_order(4,1,0). task_order(4,2,0). task_order(4,3,0). task_order(4,4,0). 

% task time window - available execution time
% can observe task i between minutes j to k
task_window(1,3,4). task_window(2,5,6). task_window(3,7,8). task_window(4,23,24). task_window(5,25,26).

% control station time window - available uplink:
% satellite i with satellite's ground station j within minutes j to k
control_window(1,1,8,17). control_window(2,1,40,44).

% ground station time window - available downlink:
% satellite i with satellite's ground station j within minutes j to k
ground_window(1,1,1,10). ground_window(2,1,20,29). ground_window(1,2,35,47).

% satellite downlink time consuming
sat_downlink(1, 2). sat_downlink(2, 1).

% satellite uplink time consuming
sat_uplink(1, 1). sat_uplink(2, 1).

% satellite observation time consuming
sat_observe(1, 2). sat_observe(2, 1).

% memory units available on satellite's i board 
memory_storage(1,140). memory_storage(2,200).

% memory units usage by satellite i for each observation task
memory_use(1,70). memory_use(2,60).

% energy units available on satellite's i board 
energy_storage(1,200). energy_storage(2,300).

% energy units usage by satellite i for each observation task
energy_use(1,5). energy_use(2,4).

% energy units generated by satellite i for each minute
energy_gen(1,1). energy_gen(2,2).
