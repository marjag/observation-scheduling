% Problem Instance

satellites(2).

%time
time(1..40).

% satellite
satellite(sentinel). satellite(landsat).

action_type(observe). action_type(downlink). action_type(uplink).

% available actions order
action(1,observe).
action(2,downlink).
action(3,observe).
action(4,observe).
action(5,uplink).
action(6,downlink).
action(7,observe).
action(8,observe).
action(9,uplink).
%*
*%

% zadania awaryjne
emergency_task(1).

% control stations
control_st(1..2).

% ground stations
ground_st(1..3).

% task priorities
priority(1,2). priority(3,2). priority(4,1). priority(7,3). priority(8,1).

% action time window - available execution time
% satellite can take action i between minutes k to i
action_window(1,1,4).
action_window(2,5,7).
action_window(3,7,10).
action_window(4,8,10).
action_window(5,11,14).
action_window(6,20,23).
action_window(7,32,35).
action_window(8,32,34).
action_window(9,35,38).
%*
*%

% satellite action time consuming
sat_action_time(sentinel, observe, 4).
sat_action_time(sentinel, downlink, 4).
sat_action_time(sentinel, uplink, 4).

sat_action_time(landsat, observe, 2).
sat_action_time(landsat, downlink, 2).
sat_action_time(landsat, uplink, 2).

% actual memory units busy
sat_memory(sentinel,0,0).
sat_memory(landsat,0,0).

% memory units available on satellite's i board 
memory_storage(sentinel,30). memory_storage(landsat,60).

% memory units usage by satellite i for each observation task
memory_use(sentinel,10). memory_use(landsat,20).

% actual energy units busy
sat_energy(sentinel,0,200).
sat_energy(landsat,0,300).

% energy units available on satellite's i board 
energy_storage(sentinel,200). energy_storage(landsat,300).

% energy units usage by satellite i for each observation task
energy_use(sentinel,20). energy_use(landsat,10).

% energy units generated by satellite i for each minute
energy_gen(sentinel,1). energy_gen(landsat,2).
